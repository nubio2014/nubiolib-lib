<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0000"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/amhous_item_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/img_update" />

        <LinearLayout
            android:background="@drawable/amhous_item_bg"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:text="更新内容"
                android:textColor="#333"
                android:textSize="14sp" />

            <ScrollView
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/dialog_updata_Messages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="10dp"
                    android:text=""
                    android:textColor="#666"
                    android:textSize="14sp" />
            </ScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="#e6e6e6"></View>

            <TextView
                android:id="@+id/dialog_updata_true"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="立即升级"
                android:textColor="#ffd213"
                android:textSize="18sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="#e1e1e1"></View>

            <TextView
                android:id="@+id/dialog_updata_false"
                android:background="@drawable/amhous_item_bg"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="暂不升级"
                android:textColor="#333333"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>