<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tran"
    android:layout_alignParentBottom="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center_horizontal"
        android:background="@color/white"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/linexolor"/>

        <RadioGroup
            android:id="@+id/bottom_group"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/first"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/first"
                android:gravity="center"
                android:paddingTop="5dp"
                android:button="@null"
                android:layout_gravity="bottom"
                android:textColor="@drawable/fontcolor"
                android:textSize="8sp"
                android:text="校务管理"/>
            <RadioButton
                android:id="@+id/second"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/second"
                android:gravity="center"
                android:button="@null"
                android:paddingTop="5dp"
                android:layout_gravity="bottom"
                android:textColor="@drawable/fontcolor"
                android:textSize="8sp"
                android:text="签到"/>
            <RadioButton
                android:id="@+id/third"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/third"
                android:gravity="center"
                android:button="@null"
                android:paddingTop="5dp"
                android:layout_gravity="bottom"
                android:textColor="@drawable/fontcolor"
                android:textSize="8sp"
                android:text="消息"/>
            <RadioButton
                android:id="@+id/four"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/four"
                android:gravity="center"
                android:button="@null"
                android:paddingTop="5dp"
                android:layout_gravity="bottom"
                android:textColor="@drawable/fontcolor"
                android:textSize="8sp"
                android:text="相册"/>
            <RadioButton
                android:id="@+id/five"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/five"
                android:gravity="center"
                android:button="@null"
                android:paddingTop="5dp"
                android:layout_gravity="bottom"
                android:textColor="@drawable/fontcolor"
                android:textSize="8sp"
                android:text="我的"/>
        </RadioGroup>
    </LinearLayout>


</FrameLayout>